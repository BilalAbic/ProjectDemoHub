# ✅ Bu değerler Docker Compose ile eşleşiyor - DEĞİŞTİRMEYİN
DATABASE_URL=postgresql://demohub_user:demohub_password@localhost:5432/demohub_db

# ⚠️ MUTLAKA DEĞİŞTİRİN - Production'da güvenlik riski!
JWT_SECRET=degistir-super-gizli-anahtar-min-32-karakter-uzunlugunda
JWT_REFRESH_SECRET=degistir-refresh-icin-ayri-gizli-anahtar-daha-uzun

# ⚠️ Cloudinary Hesabı Gerekli (Ücretsiz tier yeterli)
# https://cloudinary.com adresinden kayıt olun
CLOUDINARY_CLOUD_NAME=your_cloud_name      # Cloudinary'den alın
CLOUDINARY_API_KEY=your_api_key            # Cloudinary'den alın
CLOUDINARY_API_SECRET=your_api_secret      # Cloudinary'den alın

# ⚠️ İlk Admin Kullanıcısı - İsterseniz değiştirin
ADMIN_EMAIL=admin@demohub.com
ADMIN_PASSWORD=ChangeThisPassword123!  # Güçlü bir şifre seçin!

# ✅ Bunlar şimdilik olduğu gibi kalabilir
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000